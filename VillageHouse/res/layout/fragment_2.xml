<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/vp_2_lin"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:background="@drawable/vp2_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="84dip"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="40dip"
            android:layout_marginRight="20dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="南昌"
                android:textColor="#9b792f"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/weather_img"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_gravity="center_horizontal"
                 />

            <TextView
                android:id="@+id/weather_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"               
                android:textColor="#9b792f"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!-- ScrollView只能包含一个控件而建立 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 第一行菜单 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/meishiwaimai"
                    android:layout_width="wrap_content"
                    android:layout_height="80dip"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="55dip"
                        android:layout_height="55dip"
                        android:src="@drawable/fragmentjiaofei" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小区缴费" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bianminfuwu"
                    android:layout_width="wrap_content"
                    android:layout_height="80dip"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="55dip"
                        android:layout_height="55dip"
                        android:src="@drawable/fragmentbianmin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="便民服务" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/jiazhengfuwu"
                    android:layout_width="wrap_content"
                    android:layout_height="80dip"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="55dip"
                        android:layout_height="55dip"
                        android:src="@drawable/fragmentjiazheng" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="家政服务" />
                </LinearLayout>
            </LinearLayout>
            <!-- 第二行菜单 -->

            <TextView
                android:id="@+id/tv_null"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#ccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ershoujiaoyi"
                    android:layout_width="wrap_content"
                    android:layout_height="80dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="55dip"
                        android:layout_height="55dip"
                        android:src="@drawable/ershoujiaoyix" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="二手交易" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chongwu"
                    android:layout_width="wrap_content"
                    android:layout_height="80dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="55dip"
                        android:layout_height="55dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gengduofuwu"
                    android:layout_width="wrap_content"
                    android:layout_height="80dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="55dip"
                        android:layout_height="55dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>