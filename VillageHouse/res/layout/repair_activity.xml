<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#18b4ed"
        android:layout_alignParentTop="true"
        >
        <RelativeLayout
            android:id="@+id/title_back_ll"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/title_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:text="@string/bianming"
                />

        </RelativeLayout>
     </LinearLayout>
     <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_marginLeft="10dip"
         android:layout_marginRight="10dip"
         android:layout_marginTop="10dip"
         android:orientation="horizontal"
         >
	         <TextView
	             android:id="@+id/bx_content"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:text="报修内容:"
	             android:textSize="18dip"
	             />
	
	         <EditText
	             android:id="@+id/content_text"
	             android:gravity="top"
	             android:layout_width="match_parent"
	             android:layout_height="100dip"
	             android:ems="10"
	             android:inputType="textMultiLine" >
	
	             <requestFocus />
	         </EditText>
         </LinearLayout>
     <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_marginLeft="10dip"
         android:layout_marginRight="10dip"
         android:layout_marginTop="10dip"
         android:orientation="horizontal"
         >

         <TextView
             android:id="@+id/bx_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="报修人:"
             android:textSize="18dip" />

         <EditText
             android:id="@+id/name_text"
             android:gravity="top"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="18dip"
             android:ems="10"
             android:inputType="textMultiLine" >

             <requestFocus />
         </EditText>
     </LinearLayout>
          <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_marginLeft="10dip"
         android:layout_marginRight="10dip"
         android:layout_marginTop="10dip"
         android:orientation="horizontal"
         >  
         <TextView
             android:id="@+id/bx_loudong"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18dip"
             android:text="楼栋位置:" />
         <EditText
             android:id="@+id/loudong_text"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:gravity="top"
             >
             <requestFocus />
         </EditText>
     </LinearLayout>
     <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_marginLeft="10dip"
         android:layout_marginRight="10dip"
         android:layout_marginTop="10dip"
         android:orientation="horizontal"
         >  
         <TextView
             android:id="@+id/bx_showDate"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18dip"
             android:text="预约时间:" />
         <EditText
             android:id="@+id/showDate_text"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:gravity="top"
             >
             <requestFocus />
         </EditText>
     </LinearLayout>
     <View
         android:layout_width="match_parent"
         android:layout_height="20dip"
         />
     
     <Button
         android:id="@+id/baoxiu_input"
         android:layout_width="match_parent"
         android:layout_height="40dip"
         android:layout_marginLeft="10dip"
         android:layout_marginRight="10dip"
         android:textSize="18dip"
         android:background="#18b4ed"
         android:textColor="#ffffff"
         android:text="报  修"
         />
</LinearLayout>
