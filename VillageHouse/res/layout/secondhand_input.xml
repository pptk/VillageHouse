<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/blue"
        android:gravity="center" >

        <TextView
            android:id="@+id/big_title"
            android:layout_width="40dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="@string/input"
            android:textColor="#ffffff"
            android:textSize="18dip" />
    </LinearLayout>
     <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="160dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip" >

        <EditText
            android:id="@+id/secondhand_miaosu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#fefefe"
            android:ems="10"
            android:gravity="start"
            android:hint="请输入你想要发布的内容！！"
            android:paddingTop="5dip"
            android:textSize="16sp" >

            <requestFocus />
        </EditText>
    </RelativeLayout>

    <TextView
        android:id="@+id/secondhand_jiange"
        android:layout_width="fill_parent"
        android:layout_height="10dip" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/secondhand_photo2"
            android:layout_width="65dip"
            android:layout_height="65dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/zixun_photo1"
            android:src="@drawable/icon_addpic_unfocused"
            android:visibility="gone" />

        <GridView
            android:id="@+id/gv"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:columnWidth="5dip"
            android:numColumns="2"
            >
        </GridView>
      </RelativeLayout>
    <TextView
        android:id="@+id/secondhand_jiange2"
        android:layout_width="fill_parent"
        android:layout_height="20dip" />

    <Button
        android:id="@+id/secondhand_input"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@color/blue"
        android:text="发表"
        android:textColor="@android:color/white" />

</LinearLayout>