<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        >
         <TextView
            android:id="@+id/food_mennu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="" 
            android:textSize="18sp"
            />
        <ImageView
            android:id="@+id/food_touch"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp" 
            android:src="@drawable/zengjia"/>
        <TextView
            android:id="@+id/food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/food_fuhao"
            android:layout_alignBottom="@+id/food_fuhao"
            android:layout_toLeftOf="@id/food_touch"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" 
            android:text="/份" 
            android:textSize="15sp"/>
       <TextView 
            android:id="@+id/food_number"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/food_menu_name"
            android:layout_alignBottom="@+id/food_menu_name"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/food_price"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/food_fuhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/food_menu_name"
            android:layout_alignBottom="@+id/food_menu_name"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/food_number"
            android:text="￥" 
            android:textSize="15sp"/>
    </RelativeLayout>
    

</LinearLayout>
